<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="20dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MotoSafe Settings"
        android:textColor="#333333"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="System Contact Number"
        android:textColor="#666666"
        android:textSize="16sp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <EditText
            android:id="@+id/systemNumberInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext_background"
            android:hint="Emergency System Phone Number"
            android:inputType="phone"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColorHint="#888888" />

        <Button
            android:id="@+id/saveSystemNumberButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginStart="10dp"
            android:background="@drawable/rounded_button_background"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Owner Contact Number"
        android:textColor="#666666"
        android:textSize="16sp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <EditText
            android:id="@+id/ownerNumberInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext_background"
            android:hint="Personal Owner Phone Number"
            android:inputType="phone"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColorHint="#888888" />

        <Button
            android:id="@+id/saveOwnerNumberButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginStart="10dp"
            android:background="@drawable/rounded_button_background"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <ToggleButton
            android:id="@+id/alertToggleButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="Alerts ON"
            android:textOff="Alerts OFF"
            android:layout_marginEnd="5dp"
            android:background="@drawable/rounded_button_background"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/sleepModeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sleep"
            android:layout_marginStart="5dp"
            android:background="@drawable/rounded_button_background"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/settingsResponseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F0F0"
        android:padding="12dp"
        android:layout_marginTop="15dp"
        android:textColor="#333333"
        android:minHeight="60dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Created by Kent Carlo Amante &amp; Co."
        android:textColor="#888888"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="20dp" />
</LinearLayout>