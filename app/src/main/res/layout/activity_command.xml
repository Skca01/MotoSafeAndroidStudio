<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="20dp"
    android:gravity="center_vertical">

    <!-- Reduced from 50dp to 12dp for top space -->

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="MotoSafe Commands"
        android:textColor="#333333"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="System Contact Number"
        android:textColor="#666666"
        android:textSize="16sp"
        android:layout_marginBottom="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <EditText
            android:id="@+id/phoneNumberInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext_background"
            android:hint="Please enter system phone number"
            android:inputType="phone"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textColorHint="#888888" />

        <Button
            android:id="@+id/savePhoneNumberButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginStart="10dp"
            android:background="@drawable/rounded_button_background"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <ToggleButton
            android:id="@+id/trackToggleButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="Tracking ON"
            android:textOff="Track"
            android:layout_marginEnd="5dp"
            android:background="@drawable/rounded_button_background"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/statusButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status"
            android:layout_marginStart="5dp"
            android:background="@drawable/rounded_button_background"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <ToggleButton
            android:id="@+id/onOffToggleButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOn="OFF"
            android:textOff="ON"
            android:layout_marginEnd="5dp"
            android:background="@drawable/rounded_button_background"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/acknowledgeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Acknowledge"
            android:layout_marginStart="5dp"
            android:background="@drawable/rounded_button_background"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/commandResponseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F0F0"
        android:padding="12dp"
        android:layout_marginTop="15dp"
        android:textColor="#333333"
        android:minHeight="60dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Created by Kent Carlo Amante &amp; Co."
        android:textColor="#888888"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="20dp" />

    <!-- Reduced bottom space -->
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp" />
</LinearLayout>